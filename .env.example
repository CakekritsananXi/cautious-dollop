# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
SHADOW_DATABASE_URL=postgresql://user:password@localhost:5432/shadow_dbname

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-random-string-with-openssl-rand-base64-32

# Email Configuration (for password reset)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourapp.com

# Ayrshare Social Media Integration
AYRSHARE_API_KEY=your_ayrshare_api_key_here
AYRSHARE_BASE_URL=https://api.ayrshare.com/api

# Optional: Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Optional: Google OAuth (for authentication)
GOOGLE_ID=your-google-oauth-id
GOOGLE_SECRET=your-google-oauth-secret

# Optional: GitHub OAuth (for authentication)
GITHUB_ID=your-github-oauth-id
GITHUB_SECRET=your-github-oauth-secret

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Social Dashboard

# Logging (optional)
LOG_LEVEL=info
